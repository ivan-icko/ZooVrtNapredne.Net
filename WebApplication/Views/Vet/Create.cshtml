@model WebApplication.Models.VetViewModel

@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create vet</h2>

<form method="post" action="Create">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="VName">Vet name</label>
        </div>
        <div class="col-4">
            <input asp-for="VName" class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="JMBG">JMBG</label>
        </div>
        <div class="col-4">
            <input asp-for="JMBG" class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="PhoneNumber">Phone number</label>
        </div>
        <div class="col-4">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="DateOfBirth">Date of birth</label>
        </div>
        <div class="col-4">
            <input type="date" asp-for="DateOfBirth" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back to vet list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
