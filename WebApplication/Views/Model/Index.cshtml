@model IEnumerable<WebApplication.Models.VetViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Zoo</h2>
    </div>
    <div class="col-6 text-right">
        <a class=" btn btn-info" asp-action="Create">Add new animal</i></a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Picture</th>
                <th>Type</th>
                <th>Age</th>
                <th>Vet</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Url.Content("/"+item.ImagePath)" width="200" height="100" /></td>
                    <td>@item.Type</td>
                    <td>@item.Age</td>
                    <td>@item.VetName</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a type="button" class="btn btn-primary" href="/Model/Edit/@item.AnimalId"><i class="fa-solid fa-pen-to-square"></i></a>
                            <form method="post" action="Delete">
                                <button onclick="if (!confirm('Are you sure you want to delete this?')){return false}" type="submit" class="btn btn-danger rounded=0" asp-action="Delete" asp-route-id="@item.AnimalId"><i class="fa-solid fa-trash-can"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>