@model WebApplication.Models.VetViewModel

@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create new animal</h2>

<form method="post" action="Create">

    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Type></label>
        </div>
        <div class="col-4">
            <input asp-for=Type class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Age></label>
        </div>
        <div class="col-4">
            <input asp-for=Age class="form-control" />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Vets">Vets</label>
        </div>
        <div class="col-4">
            <select asp-for="VetId" asp-items="@Model.Vets" class="form-control"> </select>
        </div>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

<div>
    <a asp-action="Index">Back to animal list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
