
@model WebApplication.Models.ApplyViewModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Apply for package</h2>
<br />

<form method="post" id="form" enctype="multipart/form-data" asp-action="Edit">
    <input hidden asp-for="PackageId" />

    <div class="form-group row">
        <div class="col-2">
            <label asp-for=UserName></label>
        </div>
        <div class="col-4">
            <input asp-for=UserName class="form-control" disabled />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Name>Package name</label>
        </div>
        <div class="col-4">
            <input asp-for=Name class="form-control" disabled />
        </div>
        <div class="col-auto">
            @* <label asp-for="ImagePath"></label>*@
        </div>
        <div class="col-4">
            @*<input type="file" name="files" class="form-control" />*@
        </div>
    </div>



    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Duration></label>
        </div>
        <div class="col-4">
            <input asp-for=Duration class="form-control" disabled />
        </div>
    </div>



    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Price">Price</label>
        </div>
        <div class="col-4">
            <input asp-for=Price class="form-control" disabled />
            @*<select asp-for="@Model." asp-items="@Model.Vets" class="form-control"> </select>*@
        </div>
    </div>



    <div class="form-group row">
        <div class="col-2">
            <label>Animals</label>
        </div>
        <div class="col-9">

            <table class="table table-stripped">
                <tr>
                    <th>Animals in package</th>
                </tr>
                @foreach (SelectListItem item in Model.Animals)
                {
                    <tr>
                        <td class="col-md-5">
                            @item.Text
                        </td>

                    </tr>
                }
            </table>

        </div>

        <div class="form-group row">
            <div class="col-6">
                <label asp-for=NumerOfPersons>Number of persons</label>
            </div>
            <div class="col-4">
                <input asp-for=NumerOfPersons class="form-control" />
            </div>
        </div>


    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Apply" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

<div>
    <a asp-action="Index">Back to package list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $("#but1").click(function () {
                $("#listbox1 option:selected").each(function () {
                    $(this).remove().appendTo("#listbox2");
                });
            });
            $("#but2").click(function () {
                $("#listbox2 option:selected").each(function () {
                    $(this).remove().appendTo("#listbox1");
                });
            });
        });


        //funkcija za selektovanje svih zivotinja koje ostaju u paketu, nakon submita
        var form = document.getElementById('form');
        form.addEventListener('submit', function (event) {
            options = document.getElementById('listbox1');
            for (i = 0; i < options.length; i++) {
                options[i].selected = "true";
            }
        });


    </script>
}

