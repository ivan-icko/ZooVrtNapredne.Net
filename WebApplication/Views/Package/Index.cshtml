@model cloudscribe.Pagination.Models.PagedResult<PackageViewModel>
@using WebApplication.Helpers

@{
    ViewData["Title"] = "Index";
    ViewData["Controller"] = "Package";
    ViewData["Action"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

<form asp-action="Index" method="get">
    <div>
        <p>
            Find animal: <input type="text" name="searchString" value="@ViewBag.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-info" />
            <a asp-action="Index">Remove filter</a>
        </p>
    </div>
</form>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Zoo</h2>
    </div>

    @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Executive))
    {
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-action="Create"> Add new package</a>
        </div>

    }
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Package</th>
                <th>Name</th>
                <th>Animals</th>
                <th>
                    Duration
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewBag.AgeSortParam"
                       asp-route-pageNumber="@Model.PageNumber">Price</a>
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @if (String.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@Url.Content("/"+"images\\packages\\no.png")" width="400" height="200" />
                        }
                        else
                        {
                            <img src="@Url.Content("/"+item.ImagePath)" width="200" height="100" />
                        }

                    </td>
                    <td>@item.Name</td>

                    <td>
                        @foreach (var name in item.AnimalNames)
                        {
                            <b>@name</b>
                            <br />
                        }
                    </td>
                    <td>
                        @item.Duration
                    </td>

                    <td>@item.Price</td>

                    @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Executive))
                    {
                        <td class="text-right">
                            <div class="btn-group">
                                <a type="button" class="btn btn-primary" href="/Package/Edit/@item.PackageId"><i class="fa-solid fa-pen-to-square"></i></a>
                                <form method="post" action="Delete">
                                    <button onclick="if (!confirm('Are you sure you want to delete this?')){return false}" type="submit" class="btn btn-danger rounded=0" asp-action="Delete" asp-route-id="@item.PackageId"><i class="fa-solid fa-trash-can"></i></button>
                                </form>
                            </div>
                        </td>
                    }
                </tr>
            }
        </table>

        <partial name="_PaginationPartial" model="Model" view-data="ViewData" />

    </div>
</div>