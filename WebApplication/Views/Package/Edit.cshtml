@model WebApplication.Models.PackageViewModel

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit package</h2>
<br />

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <input hidden asp-for="PackageId" />
    <input hidden asp-for="ImagePath" />

    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Name></label>
        </div>
        <div class="col-4">
            <input asp-for=Name class="form-control" />
        </div>
        <div class="col-auto">
            <label asp-for="ImagePath"></label>
        </div>
        <div class="col-4">
            <input type="file" name="files" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for=Duration></label>
        </div>
        <div class="col-4">
            <input asp-for=Duration class="form-control" />
        </div>
    </div>


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Price">Price</label>
        </div>
        <div class="col-4">
            <input asp-for=Price class="form-control" />
            @*<select asp-for="@Model." asp-items="@Model.Vets" class="form-control"> </select>*@
        </div>
    </div>



    <div class="form-group row">
        <div class="col-2">
            <label asp-for="AnimalNames">Animals</label>
        </div>
        <div class="col-4">
            <textarea id="w3review" name="w3review" readonly rows="4" cols="50">
At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.
</textarea>
        </div>
        <div class="col-1"></div>
        <div class="col-4">
            <textarea id="w3review" name="w3review" readonly rows="4" cols="50">
At w3schools.com you will learn how to make a website. They offer free tutorials in all web development technologies.
</textarea>
        </div>


    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

<div>
    <a asp-action="Index">Back to package list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

