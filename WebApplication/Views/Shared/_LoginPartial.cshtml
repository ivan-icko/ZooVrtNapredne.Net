@using Microsoft.AspNetCore.Identity
@using Domain

@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav navbar-nav navbar-right">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item active">
        <a class="nav-link" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item active">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-link navbar-btn nav-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item active">
        <a class="nav-link" id="register" href="/Auth/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" href="/Auth/Login">Login</a>
    </li>
}
</ul>
